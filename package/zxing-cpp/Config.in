comment "zxing-cpp needs a toolchain w/ C++"
	depends on !BR2_INSTALL_LIBSTDCPP

config BR2_PACKAGE_ZXING_CPP
	bool "zxing-cpp"
	depends on BR2_INSTALL_LIBSTDCPP
	help
