+		input_dialog dlg(32, "", tr("Enter KLIC of %0").arg(qstr(path)),
+			tried ? tr("Decryption failed with provided KLIC.\n%0").arg(hint) : tr("Hexadecimal only."), "00000000000000000000000000000000", this);
+
