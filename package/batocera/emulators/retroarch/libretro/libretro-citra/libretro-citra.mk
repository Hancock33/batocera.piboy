define LIBRETRO_CITRA_INSTALL_TARGET_CMDS
	mkdir -p $(TARGET_DIR)/usr/lib/libretro
	$(INSTALL) -D $(@D)/buildroot-build/citra_libretro.so $(TARGET_DIR)/usr/lib/libretro/citra_libretro.so
endef

