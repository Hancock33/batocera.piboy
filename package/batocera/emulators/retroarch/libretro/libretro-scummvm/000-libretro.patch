+BUNDLE_DATAFILES_DIR="${BUNDLE_DIR}/extra"
+BUNDLE_THEME_DIR="${BUNDLE_DIR}/theme"
+BUNDLE_ZIP_FILE="${BUNDLE_DIR}.zip"
+BUNDLE_LOCAL_DATAFILES_DIR="${BUILD_PATH}/dist"
+
