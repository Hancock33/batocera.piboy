+			if ((j + aX) < 0 || (j + aX) >= aOut.w)
+				continue;
+
+			uint8 r, g, b;
+
+			const uint8_t val = in[j];
+			if (val != aKeyColor) {
+				unsigned char *col = aColors.getColor(val);
+				r = *col++;
+				g = *col++;
+				b = *col++;
