+		for (int j = 0; j < aIn.w; j++) {
+			if ((j + aX) < 0 || (j + aX) >= aOut.w)
+				continue;
+
+			uint8 r, g, b;
+
+			const uint16_t val = in[j];
+			if (val != aKeyColor) {
+				aIn.format.colorToRGB(in[j], r, g, b);
