+
+[ -z $4 ] && INFO_FILE_PRE=scummvm || INFO_FILE_PRE=$4
+[ -z $5 ] && NICE_NAME=ScummVM || NICE_NAME=$5
+[ -z $6 ] && ALLOWED_EXT=scummvm || ALLOWED_EXT=$6
