+						if (j != default_index) {
+							strcat(values_buf[i], "|");
+							strcat(values_buf[i], values[j].value);
+						}
+					}
+				}
+			}
+
+			variables[i].key = key;
+			variables[i].value = values_buf[i];
+		}
+
+		/* Set variables */
+		environ_cb(RETRO_ENVIRONMENT_SET_VARIABLES, variables);
+
+error:
+
+		/* Clean up */
+		if (values_buf) {
+			for (i = 0; i < num_options; i++) {
+				if (values_buf[i]) {
+					free(values_buf[i]);
+					values_buf[i] = NULL;
+				}
+			}
+
+			free(values_buf);
+			values_buf = NULL;
+		}
+
+		if (variables) {
+			free(variables);
+			variables = NULL;
+		}
+	}
+}
+
+#ifdef __cplusplus
+}
