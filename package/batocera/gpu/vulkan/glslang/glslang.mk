GLSLANG_VERSION = 81cc10a498b25a90147cccd6e8939493c1e9e20e

GLSLANG_SITE =  $(call github,KhronosGroup,glslang,$(GLSLANG_VERSION))
GLSLANG_DEPENDENCIES = vulkan-headers vulkan-loader
