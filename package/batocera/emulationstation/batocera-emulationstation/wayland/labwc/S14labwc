#!/bin/sh

SRC_DIR="/usr/share/labwc"
DEST_DIR="/userdata/system/.config/labwc"

start() {
    echo "Initializing Labwc configuration..."
    mkdir -p "$DEST_DIR"
    for file in rc.xml autostart; do
        echo "Copying $file to $DEST_DIR (overwriting)..."
        cp "$SRC_DIR/$file" "$DEST_DIR/"
    done

    echo "Configuration copy complete."
}

case "$1" in
    start)
        start
        ;;
    stop)
        ;;
    *)
        echo "Usage: $0 start"
        exit 1
        ;;
esac

exit 0
