#!/bin/sh

SRC_FILE="/usr/share/labwc/rc.xml"
DEST_DIR="/userdata/system/.config/labwc"

start() {
    echo "Initializing Labwc configuration..."
    mkdir -p "$DEST_DIR"
    echo "Copying $SRC_FILE to $DEST_DIR"
    cp "$SRC_FILE" "$DEST_DIR/"
}

case "$1" in
    start)
        start
        ;;
    stop)
        ;;
    *)
        echo "Usage: $0 start"
        exit 1
        ;;
esac

exit 0
