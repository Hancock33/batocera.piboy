# Ayn Odin 2 default values

# Rotate DRM for splash
display.rotate.DSI-1=1

# Default settings
display.brightness=60

global.hud_custom=position=bottom-left\nbackground_alpha=0.9\nlegacy_layout=false\ncustom_text=%GAMENAME%\ncustom_text=%SYSTEMNAME%\ncustom_text=%EMULATORCORE%\nfps\ngpu_name\nengine_version\nvulkan_driver\nresolution\nram\ngpu_stats\nncpu_stats\ncpu_temp\ncore_load\nbattery_icon\nbattery_watt\ngpu_core_clock

# default suspend on handled boards
system.suspendmode=suspend
