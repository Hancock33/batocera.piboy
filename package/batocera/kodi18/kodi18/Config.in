	help
	  Enable libvdpau support.

comment "libvdpau support needs platform 'X11/OpenGL'"
	depends on !BR2_PACKAGE_KODI18_PLATFORM_X11_OPENGL

config BR2_PACKAGE_KODI18_UPNP
	bool "upnp"
	help
