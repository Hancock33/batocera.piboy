		!BR2_PACKAGE_KODI18_PLATFORM_WAYLAND_GL && \
		!BR2_PACKAGE_KODI18_PLATFORM_WAYLAND_GLES && \
		!BR2_PACKAGE_KODI18_PLATFORM_X11_OPENGL

config BR2_PACKAGE_KODI18_LIBVDPAU
	bool "vdpau"
	depends on BR2_PACKAGE_KODI18_PLATFORM_X11_OPENGL
