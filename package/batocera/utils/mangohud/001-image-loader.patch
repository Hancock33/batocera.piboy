+   VK_CHECK(device_data->vtable.BeginCommandBuffer(cmd_buffer, &buffer_begin_info));
+
+   VkBuffer buffer;
+   VkDeviceMemory buffer_mem;
+   upload_image_data(device_data, cmd_buffer, pixels, upload_size, img->width, img->height,
