config BR2_PACKAGE_MTD_JFFS3DUMP
	bool "jffs3dump"
	default y
	depends on BR2_PACKAGE_MTD
	depends on !BR2_PACKAGE_MTD_20061007

config BR2_PACKAGE_MTD_SUMTOOL
