CONFIG_USB_HID=y

# required for evmapy
CONFIG_INPUT_UINPUT=m

# required for squashfs + overlayfs
CONFIG_NLS_ISO8859_1=y
CONFIG_OVERLAY_FS=y
CONFIG_SQUASHFS=y
CONFIG_SQUASHFS_ZSTD=y
CONFIG_SQUASHFS_LZ4=y

# don't compress modules using xz
# causes boot issues
CONFIG_MODULE_COMPRESS_XZ=n

# The Raspberry Pi GPIO Joystick Driver
CONFIG_MK_ARCADE_RPI=m

# Experimental PiBoy DMG Controller
CONFIG_XPI_GAMECON=m
CONFIG_XPI_GAMECON_XRS=m

# Bluetooth
CONFIG_BT_LEDS=y
CONFIG_BT_MSFTEXT=y
CONFIG_BT_QCA=m
CONFIG_BT_MTK=m
CONFIG_BT_HCIBTUSB_MTK=y
CONFIG_BT_HCIUART_INTEL=y
CONFIG_BT_HCIUART_RTL=y
CONFIG_BT_HCIUART_QCA=y
CONFIG_BT_HCIUART_AG6XX=y
CONFIG_BT_HCIUART_MRVL=y