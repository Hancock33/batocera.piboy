+uint16_t check_crc16(uint8_t data[])
+{
+	int len = GC_LENGTH-2;
+	uint16_t crc=0;
+	uint16_t ccrc = (data[GC_LENGTH-1]<<8) | data[GC_LENGTH-2];
+	int i,j;
+
+	for(i = 0;i<len;i++){
+		crc = (uint16_t)(crc ^ ((uint16_t)data[i] << 8));
+		for (j=0; j<8; j++){
+			if ((crc & 0x8000)!=0) crc = (uint16_t)((crc << 1) ^ 0x1021);
+			else crc <<= 1;
+		}
+	}
+
+	return crc==ccrc ? 0 : 1;
+}
+
+uint16_t crc=0;
+void calc_crc16(uint8_t *data, uint8_t len)
+{
+	int i,j;
+
+	crc=0;
+
+	for(i = 0;i<len;i++){
+		crc = (uint16_t)(crc ^ ((uint16_t)data[i] << 8));
+		for (j=0; j<8; j++){
+			if ((crc & 0x8000)!=0) crc = (uint16_t)((crc << 1) ^ 0x1021);
+			else crc <<= 1;
+		}
+	}
+	data[len] = crc>>8;
+	data[len+1] = crc&0xFF;
+}
