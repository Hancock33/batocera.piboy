include batocera-board.common

# Target definition
BR2_aarch64=y
BR2_cortex_a72=y
BR2_ARM_FPU_NEON_FP_ARMV8=y
BR2_PACKAGE_BATOCERA_TARGET_BCM2711=y

# Toolchain definition
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char -mcpu=cortex-a72 -mtune=cortex-a72 -w"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/broadcom/piboy4/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/broadcom/piboy4/fsoverlay"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/scripts/post-image-script-piboy4.sh"

# Linux headers same as kernel, a 6.4 series
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_4=y

# Kernel - Version: 6.6.0-rc1
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="$(call github,raspberrypi,linux,d9230616668b5a7409d979369a9d74b41919c4b8)/d9230616668b5a7409d979369a9d74b41919c4b8.tar.gz"
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_LINUX_KERNEL_DEFCONFIG="bcm2711"
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/broadcom/linux_patches"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/broadcom/linux-defconfig-fragment.config"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Kernel image
BR2_LINUX_KERNEL_IMAGE_TARGET_CUSTOM=y
BR2_LINUX_KERNEL_IMAGE_TARGET_NAME="Image"

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_DTB_OVERLAY_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="broadcom/bcm2711-rpi-4-b broadcom/bcm2711-rpi-400 broadcom/bcm2711-rpi-cm4"
BR2_PACKAGE_RPI_FIRMWARE_INSTALL_DTB_OVERLAYS=n

# rpi4 firmware
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_VARIANT_PI4=y
BR2_PACKAGE_RPI_FIRMWARE_CONFIG_FILE="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/broadcom/piboy4/boot/config.txt"

# gpu
BR2_PACKAGE_BATOCERA_RPI_MESA3D=y
BR2_PACKAGE_BATOCERA_SBC_XORG=y

# batocera splash screen
BR2_PACKAGE_BATOCERA_SPLASH_MPV=y

# GPIO Kernel Module
BR2_PACKAGE_XPI_GAMECON_RPI=y

# Batocera system
BR2_PACKAGE_BATOCERA_KODI=y

# Batocera dev
BR2_PACKAGE_BATOCERA_CORES_EXPERIMENTAL=y
BR2_PACKAGE_BATOCERA_CORES_EXPERIMENTAL=y
BR2_STRIP_EXCLUDE_FILES="vpinball"
BR2_CCACHE_DIR="$(HOME)/build-dir/ccache/rpi4"
