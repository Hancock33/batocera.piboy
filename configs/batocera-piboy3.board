include batocera-board.common

# Target definition
BR2_aarch64=y
BR2_cortex_a53=y
BR2_ARM_FPU_NEON_FP_ARMV8=y
BR2_PACKAGE_BATOCERA_TARGET_RPI3=y

# Toolchain definition
BR2_GCC_VERSION_11_X=y
BR2_BINUTILS_VERSION_2_39_X=y
BR2_TARGET_OPTIMIZATION="-pipe -mcpu=cortex-a53 -mtune=cortex-a53 -w"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/raspberrypi/rpi3/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/raspberrypi/rpi3/fsoverlay"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/scripts/post-image-script-piboy3.sh"
BR2_TARGET_ROOTFS_SQUASHFS4_ZSTD=y

# Linux headers same as kernel, a 5.18 series
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_18=y

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="$(call github,raspberrypi,linux,58cee8e2401c7df30850d1ce57e476424dcd5580)/58cee8e2401c7df30850d1ce57e476424dcd5580.tar.gz"
BR2_LINUX_KERNEL_DEFCONFIG="bcmrpi3"
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/raspberrypi/linux_patches"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/raspberrypi/rpi3/linux-defconfig-fragment.config"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Kernel image
BR2_LINUX_KERNEL_IMAGE_TARGET_CUSTOM=y
BR2_LINUX_KERNEL_IMAGE_TARGET_NAME="Image"

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="broadcom/bcm2710-rpi-zero-2 broadcom/bcm2710-rpi-3-b broadcom/bcm2710-rpi-3-b-plus broadcom/bcm2837-rpi-3-b"
BR2_PACKAGE_RPI_FIRMWARE_INSTALL_DTB_OVERLAYS=n

# rpi firmware
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_BOOTCODE_BIN=y
BR2_PACKAGE_RPI_FIRMWARE_VARIANT_PI=y
BR2_PACKAGE_RPI_FIRMWARE_CONFIG_FILE="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/raspberrypi/piboy3/boot/config.txt"

# batocera splash screen
BR2_PACKAGE_BATOCERA_SPLASH_MPV=y

# gpu
BR2_PACKAGE_BATOCERA_RPI_MESA3D=y

# Batocera system
BR2_PACKAGE_BATOCERA_KODI19=y

# GPIO Kernel Module
BR2_PACKAGE_XPI_GAMECON_RPI3=y

# Batocera dev
BR2_PACKAGE_BATOCERA_CORES_EXPERIMENTAL=y
BR2_STRIP_EXCLUDE_FILES="ecwolf eduke32 nblood pcexhumed rednukem voidsw ionfury"
